{{#if places}}
  <table class="table table-boardered table-hover table-dark">
    <thead>
      <tr>
        <th>N.</th>
        <th>Titulo</th>
        <th>Categoria</th>
        <th>Descripci√≥n</th>

        <th>Operations</th>
      </tr>
    </thead>

    <tbody>

      {{#each places}}
        <tr>
          <td>{{@index}}</td>
          <td>{{title}} </td>
          <td>{{category}} </td>
          <td>{{description}} </td>
          <td>
            {{#if know}}
              <a
                href="/place/{{_id}}/toggleDone"
                class="btn btn-success"
              >Conocer</a>
            {{else}}
