<div class="card card-body p-4 rounded-0 bg-dark text-white">
  <h3>Agrega un lugar</h3>

  <form action="/place/add" method="POST">

    <div>
      <label for="title">Escribe un titulo</label>
      <input
        type="text"
        name="title"
        placeholder="Titulo"
        id="title"
        class="form-control rounded-0 bg-dark text-white"
      /></div>
    <br />
    <div>
      <label for="category">Escribe una categoria</label>
      <input
        type="text"
        name="category"
        placeholder="Categoria"
        id="category"
        class="form-control rounded-0 bg-dark text-white"
      />
    </div>
    <br />
    <div>
      <label for="description">Descripción</label>
      <textarea
        name="description"
        placeholder="Descripción"
        id="description"
        class="form-control rounded-0 bg-dark text-white"
      ></textarea>
    </div>
    <br />
    <button class="btn btn-primary btn-sm mt-2">Agregar</button>

  </form>
</div>